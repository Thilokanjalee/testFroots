<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order"
    android:padding="10dp"
    android:id="@+id/orderLayout">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/juiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/juicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/juiceName"
        android:layout_margin="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/juiceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/juicePrice"
        android:layout_margin="10dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp" />




    <TextView
        android:id="@+id/juiceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAmount"
        android:layout_alignBottom="@+id/btnAmount"
        android:layout_marginStart="272dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/btnAmount"
        android:textSize="16dp" />


    <Button
        android:id="@+id/offerBtnDelete"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="94dp"
        android:background="@color/colorAccent"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnEdit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="265dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="96dp"
        android:background="@color/colorAccent"
        android:text="@string/edit"
        android:textAllCaps="false"
        android:textColor="#FFF" />

</RelativeLayout>